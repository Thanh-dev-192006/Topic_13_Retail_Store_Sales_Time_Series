import pandas as pd
from sklearn.preprocessing import LabelEncoder

# 1. Load data from file
df = pd.read_csv('/stores.csv')
df.head(5)
df.info()
df.describe()
df.isnull().sum()

# 2. Text Cleaning
text_columns = ['city', 'state', 'type']
for col in text_columns:
    df[col] = df[col].astype(str).str.strip()

# 3. Check and correct any missing values
df = df.fillna('Unknown')

# 4. Encoding
# Use Label Encoding for the 'type' column (because it's alphabetically ordered A, B, C, D, E).
le = LabelEncoder()
df['type_encoded'] = le.fit_transform(df['type'])

# 5. Ensure the data type is correct.
df['store_nbr'] = df['store_nbr'].astype(int)
df['cluster'] = df['cluster'].astype(int)

# 6. Export the cleaned data to a new file.
output_file = 'stores_cleaned.csv'
df.to_csv(output_file, index=False, encoding='utf-8')

